@using Library.Client.Services
@inject ILoginService LoginService
<AuthorizeView>
    <Authorized>
        <span>Hello @context.User.Identity.Name</span>
        <a href="/" @onclick="@(()=>LoginService.Logout())" class="ml-auto nav-link btn btn-link">Log Out</a>
    </Authorized>
    <NotAuthorized>
        <a href="Login" class="ml-auto nav-link btn btn-link">Log In</a>
    </NotAuthorized>
</AuthorizeView>
